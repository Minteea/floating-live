{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"]
    }
  },
  "include": ["src"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
